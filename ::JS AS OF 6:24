var evenAndOddTurns = function(tiles) {
	console.log(tiles.innerHTML);
	
	if (tiles.innerHTML == ''){	
		if (currentPlayer == 1) {
			tiles.innerHTML = 'x'; 
			currentPlayer = 2;
			return 'booting out';
		} else if (currentPlayer != 1) {
			if (tiles.innerHTML = ''){
		  		 tiles.innerHTML = 'o';
		  		 //Citing help from Josie, who correctly noticed I had == 'o' when I needed ='o'
		  		 //APPENDTILETOPLAYERTWOTILES ARRAY
		 		 currentPlayer = 1;
		  		 return 'booting out';
		  		}
		} 
	}
// winnerWinner();
}